/* pages/profile/profile.wxss */
.container {
  background: linear-gradient(135deg, #e3f2fd 0%, #f8fbff 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户头像区域 */
.profile-header {
  background: linear-gradient(135deg, #1976d2 0%, #2196f3 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.avatar-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-basic {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.phone {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

.complete-status {
  text-align: right;
}

.status-text {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.2);
}

.status-text.complete {
  background: rgba(39, 174, 96, 0.2);
  color: #2ecc71;
}

.status-text.incomplete {
  background: rgba(243, 156, 18, 0.2);
  color: #f39c12;
}

/* 表单区域 */
.form-section {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 15rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: #4A90E2;
  border-radius: 3rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f1f2f6;
  position: relative;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.input,
.picker {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #2c3e50;
  transition: all 0.3s ease;
}

.input.filled,
.picker.filled {
  background: #e8f4fd;
  border-color: #4A90E2;
  color: #2c3e50;
}

.input:focus {
  background: white;
  border-color: #4A90E2;
  box-shadow: 0 0 0 4rpx rgba(74, 144, 226, 0.1);
}

.picker {
  display: flex;
  align-items: center;
  min-height: 44rpx;
}

.status-icon {
  position: absolute;
  right: 10rpx;
  font-size: 32rpx;
  color: #27ae60;
}

/* 登录区域 */
.login-section {
  margin: 20rpx;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.1);
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.prompt-icon {
  font-size: 80rpx;
}

.prompt-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}

.prompt-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
}

.login-btn {
  background: #4A90E2;
  color: white;
  border: none;
  padding: 25rpx 50rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 操作按钮 */
.action-section {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.save-btn, .edit-btn, .logout-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
}

.save-btn {
  background: #bdc3c7;
  color: white;
}

.save-btn.active {
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  box-shadow: 0 4rpx 16rpx rgba(33, 150, 243, 0.3);
}

.save-btn.active:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.4);
}

.edit-btn {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  color: #1976d2;
  border: 2rpx solid #2196f3;
}

.edit-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #bbdefb 0%, #90caf9 100%);
}

.logout-btn {
  background: transparent;
  color: #d32f2f;
  border: 2rpx solid #d32f2f;
}

.logout-btn:active {
  background: #ffebee;
  transform: scale(0.98);
}

.btn-icon {
  font-size: 24rpx;
}

.btn-text {
  font-size: 26rpx;
}

/* 完成度提示 */
.completion-tip {
  margin: 20rpx;
}

.tip-card {
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
  padding: 25rpx;
}

.tip-icon {
  font-size: 40rpx;
  margin-bottom: 15rpx;
  text-align: center;
  display: block;
}

.tip-content {
  text-align: center;
  margin-bottom: 20rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #856404;
  display: block;
  margin-bottom: 8rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: #856404;
  display: block;
}

.progress-bar {
  height: 8rpx;
  background: rgba(133, 100, 4, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: #f39c12;
  transition: width 0.5s ease;
}

.progress-text {
  font-size: 22rpx;
  color: #856404;
  text-align: center;
  display: block;
  font-weight: bold;
}