/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .room-info-card, .form-section {
    padding: 30rpx;
  }
  
  .submit-section {
    padding: 20rpx;
  }
}