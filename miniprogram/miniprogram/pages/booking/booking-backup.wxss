/* pages/booking/booking.wxss */
.container {
  padding: 20rpx;
  padding-bottom: 140rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #f8fbff 100%);
  min-height: 100vh;
}

/* 房间信息卡片 */
.room-info-card {
  background: linear-gradient(135deg, #1976d2 0%, #2196f3 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(25, 118, 210, 0.2);
}

.room-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.room-number {
  font-size: 40rpx;
  font-weight: bold;
}

.room-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffeb3b;
}

.room-type {
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 28rpx;
  display: inline-block;
  backdrop-filter: blur(10rpx);
}

/* 预订表单 */
.booking-form {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 预订类型选择器 */
.booking-type-selector {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: #f5f9ff;
}

.type-option {
  flex: 1;
  padding: 30rpx 20rpx;
  border: 2rpx solid #e3f2fd;
  border-radius: 15rpx;
  text-align: center;
  transition: all 0.3s ease;
  background: white;
  position: relative;
}

.type-option.active {
  border-color: #2196f3;
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  color: white;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(33, 150, 243, 0.3);
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
  display: block;
  font-weight: bold;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  background: rgba(33, 150, 243, 0.1);
  color: #2196f3;
}

.type-option.active .type-icon {
  background: rgba(255, 255, 255, 0.2);
  color: white;
}

.type-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.type-desc {
  font-size: 24rpx;
  opacity: 0.8;
  line-height: 1.3;
}

/* 用户信息展示区域 */
.user-info-display {
  margin: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #f8fbff 0%, #e3f2fd 100%);
  border-radius: 15rpx;
  border: 1rpx solid #bbdefb;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e3f2fd;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #1976d2;
  font-weight: 500;
  flex-shrink: 0;
  width: 140rpx;
}

.info-value {
  font-size: 30rpx;
  color: #0d47a1;
  font-weight: 600;
  flex: 1;
  text-align: right;
  word-wrap: break-word;
}

.info-warning {
  display: flex;
  align-items: flex-start;
  gap: 15rpx;
  padding: 25rpx;
  background: #fff3e0;
  border: 1rpx solid #ffcc02;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.warning-icon {
  font-size: 32rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
  font-weight: bold;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 50%;
  background: #ff9800;
  color: white;
}

.warning-text {
  flex: 1;
  font-size: 26rpx;
  color: #e65100;
  line-height: 1.5;
}

.go-profile-btn {
  padding: 15rpx 25rpx;
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 24rpx;
  flex-shrink: 0;
  margin-top: 5rpx;
}

.form-section {
  padding: 30rpx;
  border-bottom: 1rpx solid #e3f2fd;
}

.form-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976d2;
  margin-bottom: 30rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #e3f2fd;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #1976d2;
  font-weight: 500;
  margin-bottom: 15rpx;
  display: block;
}

.input, .textarea, .date-picker {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e3f2fd;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #0d47a1;
  background: #fafbff;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus, .textarea:focus {
  border-color: #2196f3;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(33, 150, 243, 0.1);
}

.date-picker {
  display: flex;
  align-items: center;
  min-height: 80rpx;
}

.textarea {
  min-height: 120rpx;
  line-height: 1.5;
}

/* 费用明细 */
.cost-section {
  background: linear-gradient(135deg, #f8fbff 0%, #e8f5e8 100%);
  margin: 0 30rpx;
  padding: 30rpx;
  border-radius: 15rpx;
  border: 1rpx solid #c8e6c9;
}

.cost-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  font-size: 30rpx;
}

.cost-label {
  color: #1976d2;
  font-weight: 500;
}

.cost-value {
  color: #0d47a1;
  font-weight: bold;
}

.cost-item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #2196f3;
  font-size: 36rpx;
}

.total-amount {
  color: #1976d2;
  font-size: 40rpx;
}

/* 提交按钮区域 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: white;
  border-top: 1rpx solid #e3f2fd;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.cancel-btn {
  flex: 1;
  padding: 25rpx;
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.submit-btn {
  flex: 2;
  padding: 25rpx;
  background: linear-gradient(135deg, #2196f3 0%, #1976d2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.submit-btn.submitting {
  background: #90caf9;
  opacity: 0.7;
}

.submit-btn:not([disabled]):active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.3);
}

.form-section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 3rpx solid #667eea;
