  background: #667eea;
  color: white;
  border: none;
  border-radius: 20rpx;
  line-height: 1.2;
}

.manage-btn::after {
  border: none;
}

/* 删除按钮样式 */
.delete-btn {
  background: #ff6b6b;
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  margin-left: 20rpx;
  line-height: 1.2;
}

.delete-btn::after {
  border: none;
}

/* 更新操作按钮区域 */
.booking-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.booking-actions button {
  flex: 1;
  min-width: 140rpx;
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .booking-card {
    margin-bottom: 20rpx;
  }
  
  .booking-info {
    padding: 20rpx;
    padding-top: 50rpx;
  }
  
  .booking-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
}